&НаСервере
Процедура РегистрыСведенийПараметрыНаСервере()
	Перем ТипРегистра, ИмяРегистра, мдРегистра, КоличествоЗаписей, КоличествоРегистраторов, НоваяСтрока;
	
	ТипРегистра = "РегистрСведений";
	ЭтаФорма.РегистрыСведенийНезависимые.Очистить();
	ЭтаФорма.РегистрыСведенийПодчиненныеРегистратору.Очистить();
	
	Для Каждого мдРегистра ИЗ МЕтаданные.РегистрыСведений Цикл
		ИмяРегистра = мдРегистра.Имя;
		КоличествоЗаписей = ПолучитьКоличествоЗаписейРегистра(ТипРегистра, ИмяРегистра);
		Если мдРегистра.РежимЗаписи = Метаданные.СвойстваОбъектов.РежимЗаписиРегистра.Независимый Тогда
			НоваяСтрока = ЭтаФорма.РегистрыСведенийНезависимые.Добавить();
			НоваяСтрока.НомерСтроки = ЭтаФорма.РегистрыСведенийНезависимые.Количество();
			НоваяСтрока.ИмяРегистра = мдРегистра.Имя;
			НоваяСтрока.ПериодичностьРегистраСведений = мдРегистра.ПериодичностьРегистраСведений;
			НоваяСтрока.СинонимРегистра = мдРегистра.Синоним;
			НоваяСтрока.Регистраторы = Неопределено;
			НоваяСтрока.РегистраторыСтрока = НоваяСтрока.Регистраторы;	// Метаданные.
			НоваяСтрока.КоличествоРегистраторов = 0;
			НоваяСтрока.КоличествоЗаписей = КоличествоЗаписей;
		Иначе
			НоваяСтрока = ЭтаФорма.РегистрыСведенийПодчиненныеРегистратору.Добавить();
			НоваяСтрока.НомерСтроки = ЭтаФорма.РегистрыСведенийПодчиненныеРегистратору.Количество();
			НоваяСтрока.ИмяРегистра = мдРегистра.Имя;
			НоваяСтрока.ПериодичностьРегистраСведений = мдРегистра.ПериодичностьРегистраСведений;
			НоваяСтрока.СинонимРегистра = мдРегистра.Синоним;
			НоваяСтрока.Регистраторы = ПолучитьСписокРегистраторовРегистра(мдРегистра);	// ОписаниеТипов.
			НоваяСтрока.РегистраторыСтрока = НоваяСтрока.Регистраторы;	// Метаданные.
			НоваяСтрока.КоличествоРегистраторов = ПолучитьКоличествоРегистраторовРегистра(ТипРегистра, ИмяРегистра);
			НоваяСтрока.КоличествоЗаписей = КоличествоЗаписей;
		КонецЕсли;
	КонецЦикла;
	
КонецПроцедуры

&НаСервере
Функция ПолучитьСписокРегистраторовРегистра(мдРегистра)
	Перем Регистраторы;
	
	Регистраторы = мдРегистра.СтандартныеРеквизиты.Регистратор.Тип;
	
	Возврат Регистраторы;
КонецФункции

&НаСервере
Функция ПолучитьКоличествоРегистраторовРегистра(ТипРегистра, ИмяРегистра)
	Перем Запрос, Результат, Выборка, КоличествоРегистраторов;
	
	Запрос = Новый Запрос;
	Запрос.Текст = "
	|ВЫБРАТЬ
	|КОЛИЧЕСТВО(РАЗЛИЧНЫЕ Регистр.Регистратор) КАК КоличествоРегистраторов
	|ИЗ
	|" + ТипРегистра + "." + ИмяРегистра + " КАК Регистр";
	
	Результат = Запрос.Выполнить();
	Если Результат.Пустой() Тогда
		Возврат 0;
	КонецЕсли;
	
	Выборка = Результат.Выбрать();
	Выборка.Следующий();
	КоличествоРегистраторов = Выборка.КоличествоРегистраторов;
	
	Возврат КоличествоРегистраторов;

КонецФункции


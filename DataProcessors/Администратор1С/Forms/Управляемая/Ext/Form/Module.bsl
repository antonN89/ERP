// Вкладка "Ссылки на объект". Открыть текущий элемент списка.
//
&НаКлиенте
Процедура ТСсылкиОткрытие(Элемент, СтандартнаяОбработка)
	Перем Меню, ПараметрыОповещенияОЗавершении, ТекущиеДанные, Выбор, Оповещение;
			
	Если (ТипЗнч(Элемент) = Тип("ПолеФормы") И Элемент.Имя = "Данные") 
		ИЛИ (ТипЗнч(Элемент) = Тип("ТаблицаФормы") И Элемент.ТекущийЭлемент.Имя = "Данные") Тогда
		
		СтандартнаяОбработка = Ложь;
		
		Если ТипЗнч(Элемент) = Тип("ПолеФормы") Тогда
			ТекущиеДанные = Элемент.Родитель.ТекущиеДанные.Данные;
		Иначе
			ТекущиеДанные = Элемент.ТекущиеДанные.Данные;
		КонецЕсли;
		
		ПараметрыОповещенияОЗавершении = Новый Структура("Элемент, ТекущиеДанные, СтандартнаяОбработка", Элемент, ТекущиеДанные, СтандартнаяОбработка);
		
		Меню = Новый СписокЗначений;
		Меню.Добавить(0, "Открыть в форме объекта: " + ТекущиеДанные, , БиблиотекаКартинок.Лупа);
		Если ЭтоСсылка(ТипЗнч(ТекущиеДанные)) Тогда
			Меню.Добавить(1, "Открыть в форме Администратор: " + ТекущиеДанные, , БиблиотекаКартинок.Изменить);
		Иначе
			ТСсылкиОткрытиеЗавершение(0, ПараметрыОповещенияОЗавершении);
			Возврат;
		КонецЕсли;
		
		Если ИспользоватьРежимМодальности() Тогда
			// Стандартно в модальном режиме (8.2/8.3) с обработкой результата.
			Выбор = ЭтаФорма.ВыбратьИзМеню(Меню, Элемент);
			ТСсылкиОткрытиеЗавершение(Выбор, ПараметрыОповещенияОЗавершении);
		Иначе
			// Стандартно в немодальном режиме (8.3) с обработкой результата.
			Оповещение = Вычислить("Новый ОписаниеОповещения(""ТСсылкиОткрытиеЗавершение"", ЭтаФорма, ПараметрыОповещенияОЗавершении)");
			Выполнить("ЭтаФорма.ПоказатьВыборИзМеню(Оповещение, Меню, Элемент)");
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ТСсылкиОткрытиеЗавершение(Выбор, ПараметрыОповещения) Экспорт
	Перем ТекущееЗначение, РежимОткрытияФормы;
	
	ТекущиеДанные = ПараметрыОповещения.ТекущиеДанные;
	
	// Проверяем ответ диалога выбра значений списка и выполняем действия.
	Если Выбор = Неопределено Тогда
		Возврат;
	ИначеЕсли ТипЗнч(Выбор) = Тип("ЭлементСпискаЗначений") И Выбор.Значение = 1 Тогда
		НовоеОкноАдминистатора1С(Истина, ТекущиеДанные);
	Иначе
		РежимОткрытияФормы = ОткрытьФормуОбъектаМодальноИлиНемодальноВРежимеБлокировкиВладельца(ТекущиеДанные, ПараметрыОповещения.СтандартнаяОбработка);
		Если РежимОткрытияФормы = "Стандартно" Тогда
			Попытка
				// По-возможности используем асинхронный метод.
				Выполнить("ПоказатьЗначение(, ТекущиеДанные);");
			Исключение
				ОткрытьЗначение(ТекущиеДанные);
			КонецПопытки;
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры


Процедура ДокументУдалениеГСПроизвестиУдалениеДокументовНаСервере(Знач ДокументУдалениеГСДействие, Знач ТаблицаСписокВидовДокументов, ДокументУдалениеГСПериод, Знач ДокументУдалениеГСОрганизации, ДокументУдалениеГСКомментарий) Экспорт
	Перем Запрос, РезультатЗапроса, Выборка, ДатаНачала, ДатаОкончания;
	Перем Организация, мдДокумента, ДокументСсылка, ДокументОбъект, ПроведениеРазрешено, ДвижениеДокумента, МассивСтрок, ОбрабатываемыйДокумент;
	Перем КВоДокТИПА, КВоДокВСЕГО, Сообщение;
	
	УстановитьПривилегированныйРежим(Истина);
	
	ДатаНачала = НачалоДня(ДокументУдалениеГСПериод.ДатаНачала);
	ДатаОкончания = КонецДня(ДокументУдалениеГСПериод.ДатаОкончания);
	Если ДатаОкончания = КонецДня(Дата("00010101")) Тогда
		ДатаОкончания = КонецДня(ТекущаяДата());
	КонецЕсли;
	
	КВоДокВСЕГО = 0;
	ДокументУдалениеГСКомментарий = "";
	Для Каждого мдДокумента ИЗ Метаданные.Документы Цикл
		
		Если НЕ ЕстьРеквизитОбъектаМетаданных1С("Организация", мдДокумента) Тогда
			Продолжить;
		КонецЕсли;
		
		МассивСтрок = ТаблицаСписокВидовДокументов.НайтиСтроки(Новый Структура ("Значение", мдДокумента.Имя));
		Если МассивСтрок.Количество() = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		ОбрабатываемыйДокумент = МассивСтрок[0].Пометка;
		Если НЕ ОбрабатываемыйДокумент Тогда
			Продолжить;
		КонецЕсли;
		
		Запрос = Новый Запрос;
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	Документ.Ссылка КАК Ссылка,
		|	Документ.Организация КАК Организация
		|ИЗ
		|	Документ." + мдДокумента.Имя + " КАК Документ
		|ГДЕ
		|	Документ.Организация В(&СписокОрганизаций)
		|	И Документ.Дата МЕЖДУ &ДатаНачала И &ДатаОкончания";
		
		Запрос.УстановитьПараметр("СписокОрганизаций"	, ДокументУдалениеГСОрганизации);
		Запрос.УстановитьПараметр("ДатаНачала"			, ДатаНачала);
		Запрос.УстановитьПараметр("ДатаОкончания"		, ДатаОкончания);
		
		РезультатЗапроса = Запрос.Выполнить();
		Если РезультатЗапроса.Пустой() Тогда
			Продолжить;
		КонецЕсли;
		
		КВоДокТИПА = 0;
		Выборка = РезультатЗапроса.Выбрать();
		Пока Выборка.Следующий() Цикл
			
			ДокументСсылка = Выборка.Ссылка;
			
			Если НЕ ДокументУдалениеГСДействие = "Удалить" И ДокументСсылка.ПометкаУдаления Тогда
				Продолжить;
			КонецЕсли;
			
			Попытка
				ДокументОбъект = ДокументСсылка.ПолучитьОбъект();
			Исключение
				Сообщить("Невозможно получить объект: " + ДокументСсылка);
				Продолжить;
			КонецПопытки;
		
			ПроведениеРазрешено = МетаданныеПроведениеДокументаРазрешено(ДокументСсылка);
			
			// Отмена проведения документа / Удаление движений документа.
			Если ЕстьРеквизитОбъекта1С("ОбменДанными", ДокументОбъект) Тогда	// "ГРУБАЯ СИЛА".
				ДокументОбъект.ОбменДанными.Загрузка = Истина;	// Не все объекты имеют свойство "ОбменДанными".
			КонецЕсли;
			Если ПроведениеРазрешено Тогда
				Попытка
					Если ДокументОбъект.Проведен Тогда
						ДокументОбъект.Записать(РежимЗаписиДокумента.ОтменаПроведения);
					КонецЕсли;
				Исключение
					Попытка
						ДокументОбъект.Проведен = Ложь;
						УдалитьДвиженияУДокумента(ДокументОбъект);		// УДАЛЕНИЕ движений документа.
						ДокументОбъект.Записать(РежимЗаписиДокумента.Запись);
					Исключение
						Сообщить("Не удалось удалить движения документа: " + ДокументСсылка);
					КонецПопытки;
				КонецПопытки;
			Иначе
				Попытка
					ДокументОбъект.Проведен = Ложь;
					УдалитьДвиженияУДокумента(ДокументОбъект);			// УДАЛЕНИЕ движений документа.
					ДокументОбъект.Записать(РежимЗаписиДокумента.Запись);
				Исключение
					Сообщить("Не удалось удалить движения документа: " + ДокументСсылка);
				КонецПопытки;
			КонецЕсли;
			
			// Удаление документа.
			Попытка
				Если ДокументУдалениеГСДействие = "Удалить" Тогда
					ДокументОбъект.Удалить();
				Иначе
					ДокументОбъект.УстановитьПометкуУдаления(Истина);
				КонецЕсли;
				КВоДокТИПА = КВоДокТИПА + 1;
				КВоДокВСЕГО = КВоДокВСЕГО + 1;
			Исключение
				Сообщить("Не удалось удалить документ: " + ДокументСсылка);

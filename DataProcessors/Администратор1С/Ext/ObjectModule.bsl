	хЗначение = СтрЗаменить(хЗначение," х ","х");
	хЗначение = СтрЗаменить(хЗначение," x ","x");
	хЗначение = СтрЗаменить(хЗначение," * ","*");
	хЗначение = СтрЗаменить(хЗначение," = ","=");
	хЗначение = СтрЗаменить(хЗначение," - ","-");
	хЗначение = СтрЗаменить(хЗначение," ,",",");
	хЗначение = СтрЗаменить(хЗначение," .",".");
	хЗначение = СтрЗаменить(хЗначение,"( ","(");
	хЗначение = СтрЗаменить(хЗначение," )",")");
	хЗначение = СтрЗаменить(хЗначение,"[ ","[");
	хЗначение = СтрЗаменить(хЗначение," ]","]");
	хЗначение = СтрЗаменить(хЗначение,"{ ","{");
